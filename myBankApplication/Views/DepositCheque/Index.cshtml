@using myBankApplication.Data.Enum
@using myBankApplication.ViewModels
@model List<IndexChequeViewModel>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/sideNav.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/Table.css">
    <script src="https://kit.fontawesome.com/6703c9cc10.js" crossorigin="anonymous"></script>


</head>
<body>
    @{
        Layout = "~/Views/Shared/SideNav.cshtml";
    }

    <div class="content">
        <div style="overflow-x: auto;">
            <table id="tableStyle">
                <tr>
                    <th>ID</th>
                    <th>Account Number</th>
                    <th>Amount</th>
                    <th>Reference</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Pay</th>


                </tr>
                @foreach (var cheques in Model)
                {


                    <tr>
                        <td>@cheques.Id</td>
                        <td> @cheques.accountNumbber </td>
                        <td class="currency-code">£@cheques.Amount.ToString("0.00") </td>
                        <td> @cheques.Description </td>
                        <td> @cheques.Date </td>
                        <td>@cheques.Status</td>
                        @if (cheques.Status == Status.Inactive) {<td>   <p> Paid </p> </td>}                  
                         else{
                           <td><a asp-controller="Transaction" asp-action="DepositCheque" asp-route-id="@cheques.Id">Deposit Cheque</a></td>
                         }
                        <td><a asp-controller="DepositCheque" asp-action="Detail" asp-route-id="@cheques.Id"> More details</a></td>


                    </tr>


                }
            </table>
        </div>






    </div>
</body>
</html>