@using myBankApplication.ViewModels
@model IndexTransactionsViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/sideNav.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/Table.css">
    <script src="https://kit.fontawesome.com/6703c9cc10.js" crossorigin="anonymous"></script>


</head>
<body>
    @{
        Layout = "~/Views/Shared/SideNav.cshtml";
    }

    <div class="content">
        <ht></ht>
        <div style="overflow-x: auto;">
            <table id="tableStyle">
                <tr>
                    <th>Transaction ID</th>
                    <th>From Account </th>
                    <th>Recipient</th>
                    <th>Destination Account</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Transaction Type</th>
                    <th>Reference</th>


                </tr>
                <tr>
                    <td>@Model.Id</td>
                    <td> @if (Model.AccountNo == null)
                        {
                            <p>Serena Bank</p>
                        }  
                        @Model.AccountNo </td>
                    <td> @Model.RecipientName</td>
                    <td>@Model.DestAccount</td>
                    <td class="currency-code">£@Model.Amount.ToString("0.00") </td>
                    <td> @Model.Date </td>
                    <td> @Model.TransactionType </td>
                    <td> @Model.Reference </td>

                </tr>

            </table>
        </div>
    </div>
</body>
</html>