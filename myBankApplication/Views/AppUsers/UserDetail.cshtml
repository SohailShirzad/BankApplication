@using myBankApplication.ViewModels
@model UserDetailViewModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/sideNav.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/Table.css">
    <link rel="stylesheet" href="~/css/TwoColumn.css">
    <script src="https://kit.fontawesome.com/6703c9cc10.js" crossorigin="anonymous"></script>


</head>
<body>
    @{
        Layout = "~/Views/Shared/SideNav.cshtml";
    }

    <div class="content">

        <!--User Details-->
        <div class="row">
            <div class="column" style="background-color:white;">
                <h2>Account Details:</h2>
                @foreach (var accounts in Model.Accounts)
                {
                    <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-user"></i> Account Number</label>
                    <div style="border: 1px solid #ccc; background-color:white"> <h6> @accounts.AccountNo</h6></div>

                    <br />

                    <label style="font-size: 20px; font-weight:bold;"><i class="fa-solid fa-envelope"></i> Sort Code</label>
                    <div style="border: 1px solid #ccc; background-color:white"> <h6> @accounts.Sort_Code</h6></div>

                    <br />


                    <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-phone"></i> Type </label>
                    <div style="border: 1px solid #ccc; background-color:white"> <h6> @accounts.AccountType</h6></div>

                    <br />

                    <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-house"></i> Status</label>
                    <div style="border: 1px solid #ccc; background-color:white"> <h6> @accounts.Status</h6></div>

                    <br />

                    <label style="font-size: 20px; font-weight:bold;"><i class="fa-solid fa-calendar"></i> Balance </label>
                    <div style="border: 1px solid #ccc; background-color:white"> <h6>£@accounts.Balance.Value.ToString("0.00")</h6></div>

                    <button type="submit" asp-controller="AppUsers" asp-action="DeleteCustomerProfile" style="background: #800000;border-radius: 1.875em; color: #fff; cursor: pointer;
                    font-size: 1rem; font-weight: 700; letter-spacing: 1px; line-height: normal; margin: 15px auto;
                    padding: 0.8125em 1.875em">
                        Close your account
                    </button>


                }

            </div>
            <div class="column" style="background-color:#edecf9;">
                <h2 style="color:#192851;">Personal Details</h2>
                <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-user"></i> Full Name</label>
                <div style="border: 1px solid #ccc; background-color:white"> <h6> @Model.Title @Model.FullName</h6></div><br />

                <label style="font-size: 20px; font-weight:bold;"><i class="fa-solid fa-envelope"></i> Email</label>
                <div style="border: 1px solid #ccc; background-color:white"> <h6> @Model.Email</h6></div><br />


                <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-phone"></i> Phone</label>
                <div style="border: 1px solid #ccc; background-color:white"> <h6> @Model.PhoneNumber</h6></div><br />

                <label style="font-size: 20px; font-weight:bold;"><i class="fa fa-house"></i> Address</label>
                <div style="border: 1px solid #ccc; background-color:white"> <h6> @Model.Address, @Model.Post_Code</h6></div><br />

                <label style="font-size: 20px; font-weight:bold;"><i class="fa-solid fa-calendar"></i> Date of Birth</label>
                <div style="border: 1px solid #ccc; background-color:white"> <h6>@Model.DateOfBirth.ToString("d")</h6></div><br>
                <a class="cta-button buttonColor" asp-controller="AppUsers" asp-action="EditUserProfile" asp-route-id="@Model.Id">Change Personal Details:</a>

            </div>
        </div>





        <!--Transactions-->

    </div>
</body>
</html>